.nav-box
	background-color primary__
	.nav-box__list
		position: relative
		&:after
			content ''
			display block
			position absolute
			bottom 0
			height 1px
			background-color line
			width 100%
			left 0
		&:nth-last-of-type(1)
			&:after
				display none
		//.c-icon--triangle
		//	margin-left: auto
	.nav-box__list--top
		padding 12px 15px 11px
		background-color back
		border-bottom 1px solid primary
		display flex
		justify-content space-between
		align-items center
		._list--top__r
			color text
		.c-icon--close
			display block
			margin 0 auto
	.nav-box__list--selected
		display flex
		margin 0 -20px
		padding 15px 20px
		align-items center
		background menu
		color base
	.nav-box__list__link
		display flex
		padding 15px
		align-items center
		background primary__
		color text
		.nav-box__text
			display block
			width 90px
		.nav-box__search__history
			color base
			display block
			@extend $ellipsis
			width 150px
			&.is-empty
				color text
	.nav-box__list__icon
		width 25px
		display block
		text-align center
		margin-right: 5px
	.nav-box__list__back
		background-color back
		.c-icon--triangle
			margin-left: auto
	.c-icon--l
		margin-right: 10px
	&.is-disable
		display none


//bottom vcategory nav
.nav-box--category__ttl
	border-top 1px solid menu
	color text
	background primary__
	padding 20px 0 0
	margin-bottom: 10px
	.c-icon--circle--text__ttl
		margin-right: 2px
		position: relative
		top: 1px
	> span
		display block
		padding-left: 15px
.nav-box--category
	margin-bottom: 20px
	width 100%
	display flex
	flex-wrap wrap
	.nav-box__list
		height 52px
		width 50%
		position: relative
		border-top 1px solid line
		border-right 1px solid line
		&:nth-of-type(5),
		&:nth-of-type(6)
			border-bottom 1px solid line
		&:nth-of-type(even)
			border-right none
		.c-icon--triangle
			padding-right: 7px
	.nav-box__list__link
		padding-left: 30px
		display flex
		height: 100%
		align-items center
		background primary__
		color text
		justify-content space-between
	.nav-box__list__icon
		width 25px
		height 21px
		display flex
		align-items center
		text-align center
		margin-right: 5px
		margin-left: 20px
	.nav-box__list--selected
		display flex
		align-items center
		justify-content space-between
		background menu
		color base
		height 100%
		position relative
		padding-left: 30px
	.nav-box__list__arrow
		display block
		position absolute
		right 20px
		top 18px
		margin auto

.nav-box--left
	@extend .nav-box
	.nav-box__list
		&:nth-last-of-type(1)
			border-bottom 1px solid line

.overlay
	position: absolute
	top: 0
	left: 0
	bottom: 0
	right: 0
	z-index: 10000
	background: rgba(0,0,0,0.3)
	display none
	&.is-open
		display block

