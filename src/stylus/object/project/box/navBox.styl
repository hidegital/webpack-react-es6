.globalmenu__wrap
	position: relative;
	-webkit-transition: all .4s;
	transition: all .4s;
	&.is-open
		-webkit-transform: translate3d(-270px, 0, 0);
		transform: translate3d(-270px, 0, 0);
	&.is-open--left
		-webkit-transform: translate3d(270px, 0, 0);
		transform: translate3d(270px, 0, 0);
.nav-box
	transition: all .4s;
	right -270px
	position fixed
	top 0
	width 270px
	z-index: 100
	height 100%
	overflow-x: hidden
	display block
	&.is-open
		-webkit-transform: translate3d(-270px, 0, 0);
		transform: translate3d(-270px, 0, 0);
.nav-box--left
	transition: all .4s;
	left -270px
	position: absolute
	top 0
	width 270px
	z-index: 100
	overflow-x: hidden
	height 100%
	&.is-open
		-webkit-transform: translate3d(270px, 0, 0);
		transform: translate3d(270px, 0, 0);
.is-noClick
	pointer-events none

.nav-horizontal
	overflow: hidden
	height: 54px
	width: 100%
	background-color back

.nav-horizontal__mask
	height: 74px
	width: 100%
	overflow-x: auto
	-webkit-overflow-scrolling: touch

.nav-horizontal__list
	display: inline-table
	max-width: 100%
	height 100%

.nav-horizontal__lists
	display: table-cell
	vertical-align top
	white-space: nowrap
	padding-right 25px
	padding-left: 10px
	height: 54px
	padding-top: 21px
	color text













